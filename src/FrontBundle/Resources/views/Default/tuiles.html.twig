                    <p class="lead">Accès à votre demande de formation</p>
                </figcaption>
              <a href="{{ path('espace_formation',{'typeFormation':'professionnel'}) }}"></a>
            </figure>
        </div>
        <div class="col-md-4  col-xs-12 col-centered">
            <figure class="snip1279">
                <img src="{{ asset('images/secours.png') }}" alt="image espace poste de secours"/>
