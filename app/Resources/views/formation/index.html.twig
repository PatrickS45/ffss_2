{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formation list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomlong</th>
                <th>Nomcourt</th>
                <th>Categorie</th>
                <th>Descriptif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': formation.id }) }}">{{ formation.id }}</a></td>
                <td>{{ formation.nomLong }}</td>
                <td>{{ formation.nomCourt }}</td>
               <td>
                    {% if formation.categorie.nomCategorie is defined %}
                      {{ formation.categorie.nomCategorie }}
                    {% endif %}
                </td>
                <td>{{ formation.descriptif }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('formation_show', { 'id': formation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('formation_edit', { 'id': formation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('formation_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
