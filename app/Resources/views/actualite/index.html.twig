{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actualite list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td><a href="{{ path('actualite_show', { 'id': actualite.id }) }}">{{ actualite.id }}</a></td>
                <td>{{ actualite.titre }}</td>
                <td>{{ actualite.contenu }}</td>
                <td>{{ actualite.auteur }}</td>
                <td>{% if actualite.date %}{{ actualite.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ actualite.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('actualite_show', { 'id': actualite.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('actualite_edit', { 'id': actualite.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actualite_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
